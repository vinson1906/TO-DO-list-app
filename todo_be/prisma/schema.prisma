generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

//user --> task create 

model User {
  id String @id @default(uuid())
  email String @unique
  name String
  password String

  tasks Tasks[]
}

enum Priority {
  High
  Medium
  Low
}

model Tasks {
  id         String   @id @default(uuid())
  task_title String
  desc       String?
  priority   Priority @default(Low)
  createdBy  String 
  // assinged String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [createdBy] ,references: [id])
}
